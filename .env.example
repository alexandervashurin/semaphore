# Пример .env файла для локальной разработки

# База данных (выберите один вариант)

# Вариант 1: BoltDB (по умолчанию)
SEMAPHORE_DB_DIALECT=bolt
SEMAPHORE_DB_PATH=./data/semaphore.bolt

# Вариант 2: SQLite
# SEMAPHORE_DB_DIALECT=sqlite
# SEMAPHORE_DB_PATH=./data/semaphore.db

# Вариант 3: MySQL
# SEMAPHORE_DB_DIALECT=mysql
# SEMAPHORE_DB_HOST=localhost
# SEMAPHORE_DB_PORT=3306
# SEMAPHORE_DB_USER=semaphore
# SEMAPHORE_DB_PASS=secret
# SEMAPHORE_DB_NAME=semaphore

# Вариант 4: PostgreSQL
# SEMAPHORE_DB_DIALECT=postgres
# SEMAPHORE_DB_HOST=localhost
# SEMAPHORE_DB_PORT=5432
# SEMAPHORE_DB_USER=semaphore
# SEMAPHORE_DB_PASS=secret
# SEMAPHORE_DB_NAME=semaphore

# HTTP сервер
SEMAPHORE_HTTP_PORT=3000
SEMAPHORE_WEB_HOST=http://localhost:3000

# Администратор (создаётся при первом запуске)
SEMAPHORE_ADMIN=admin
SEMAPHORE_ADMIN_PASSWORD=changeme
SEMAPHORE_ADMIN_NAME=Administrator
SEMAPHORE_ADMIN_EMAIL=admin@localhost

# Логирование
RUST_LOG=info

# Максимальное количество параллельных задач
SEMAPHORE_MAX_PARALLEL_TASKS=10
